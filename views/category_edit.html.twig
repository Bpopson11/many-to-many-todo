<html>
<head>
      <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" media="screen" charset="utf-8">
      <link rel="stylesheet" type="text/css" href="/css/styles.css" media="screen"  charset="utf-8">
      <link rel="stylesheet" href="/css/normalize.css">
    <title>To Do List</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Categories</h1>
    </div>
    <div class="container">
        <h1>Update the {{ category.getName }} category </h1>

        <form action="/categories/{{ category.getId }}" method="post">
          <input name="_method" type="hidden" value="patch">

          <label for="name">Rename your category:</label>
          <input id="name" name="name" type="text">

          <button class='btn' type="submit">Update</button>
        </form>

        <form action="/categories/{{ category.getId }}" method="post">
          <input name="_method" type="hidden" value="DELETE">

          <button class='btn' type="submit">Delete this category</button>
        </form>
    </div>
</body>
</html>
