<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" media="screen" charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/styles.css" media="screen"  charset="utf-8">
    <link rel="stylesheet" href="/css/normalize.css">
    <title>To Do List</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Categories</h1>
    </div>
    <div class="container">

    {% if categories is not empty %}
        <p>Here are all your categories:</p>
        <ul>
            {% for category in categories %}
                <li><a href="/categories/{{ category.getId }}">{{ category.getName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/categories' method='post'>
        <label for='name'>Category name</label>
        <input id='name' name='name' type='text'>

        <button class='btn' type='submit'>Add category</button>
    </form>
    <form action='/delete_categories' method='post'>
        <button class='btn' type='submit'>Clear</button>
    </form>

    <p><a href='/'>Home</a></p>
</div>
</body>
</html>
